# top-most EditorConfig file
root = true

[*]
end_of_line = lf
insert_final_newline = true
indent_style = tab
tab_width = 4
trim_trailing_whitespace = true

[{.eslintrc,package.json,package-lock.json,.prettierrc.json,tsconfig.json,jest.config.js,knexfile.js,*.yaml}]
indent_style = space
indent_size = 2

[*.{ts,js,html,css}]
charset = utf-8
